{
  "name": "i18nizeelement",
  "version": "0.2.1",
  "author": "Brett Zamir",
  "contributors": [],
  "license": "MIT",
  "description": "Internationalize an element with `lang`, `dir`, and `style.writingMode` as indicated by the supplied language and settings",
  "main": "dist/i18nizeelement.umd.js",
  "module": "dist/i18nizeelement.es6.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/brettz9/i18nizeElement"
  },
  "bugs": "https://github.com/brettz9/i18nizeElement/issues",
  "homepage": "https://github.com/brettz9/i18nizeElement",
  "keywords": [
    "i18n",
    "html",
    "rtl"
  ],
  "scripts": {
    "prebuild": "eslint src tests/",
    "build": "rollup -c rollup.config.umd.js && rollup -c rollup.config.es6.js",
    "pretest": "rollup -c rollup.config.tests.js",
    "start": "npm run test:watch",
    "test:watch": "nodemon --watch src --watch tests --exec 'npm test'",
    "test": "mocha build/tests-bundle.js",
    "test:browser": "npm run build && npm run pretest && opn http://127.0.0.1:8080/tests/ && static -p 8080",
    "prepare": "npm run build && npm test"
  },
  "engines": {
    "node": ">=0.10"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^4.13.1",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "jamilih": "^0.30.0",
    "jsdom": "^11.5.1",
    "mocha": "^4.0.1",
    "node-static": "0.7.10",
    "nodemon": "^1.11.0",
    "opn-cli": "3.1.0",
    "rollup": "^0.52.2",
    "rollup-plugin-buble": "^0.18.0",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-multi-entry": "^2.0.1",
    "rollup-watch": "^4.3.1",
    "rtl-detect": "^1.0.2",
    "source-map-support": "^0.5.0"
  },
  "dependencies": {}
}
